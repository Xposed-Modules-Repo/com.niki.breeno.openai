        <provider
            android:name="com.niki914.breeno.provider.messaging.MessagingProvider"
            android:authorities="com.niki914.breeno.messaging.provider"
            android:exported="true" />

        <provider
            android:name="com.niki914.breeno.provider.config.ConfigProvider"
            android:authorities="com.niki914.breeno.config.provider"
            android:exported="true" />
